<%= form_with model: PageFeedback.new, url: page_feedback_path do |form| %>
  <div class="page-feedback">
    <div class="page-feedback__content">
      
      <p class="page-feedback__title">Is this page useful?</p>

      <div class="govuk-button-group">
        <%= form.govuk_submit('<span class="govuk-visually-hidden">Is this page useful.</span> Yes'.html_safe, name: "page_feedback[useful]", value: true, inverse: true, data: { turbo: false }) %>
        <%= form.govuk_submit('<span class="govuk-visually-hidden">Is this page useful.</span> No'.html_safe, name: "page_feedback[useful]", value: false, inverse: true, data: { turbo: false }) %>
      </div>
    </div>

    <div class="govuk-button-group">
      <%= govuk_button_link_to('Give more feedback about this page', new_feedback_path(url: request.url), inverse: true, data: { turbo: false }) %>
    </div>
  </div>
<% end %>

