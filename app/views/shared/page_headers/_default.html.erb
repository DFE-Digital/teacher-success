<div class="page-header">
  <div class="govuk-width-container">
    <%= govuk_phase_banner(tag: { text: "Beta" }) do %>This is a new service. Help us improve it and 
      <%= govuk_link_to("give your feedback", new_feedback_path) %>.
    <% end %>

    <%= render "shared/breadcrumbs" %>
    <%= render "shared/flash" %>

    <div class="content-container">
      <div class="content">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-4"><%= @front_matter.dig(:page_header, :title) %></h1>
        <p class="govuk-body-l govuk-!-margin-bottom-2"><%= @front_matter.dig(:page_header, :description) %></p>
      </div>

      <% if @front_matter.dig(:page_header, :logo) %>
        <div class="image">
          <%= image_tag "teacherlogo.svg", alt: "Teaching every lesson shapes a life logo" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
