apiVersion: apps/v1
kind: Deployment
metadata:
  name: teach-maintenance
  labels:
    app: teach-maintenance
spec:
  replicas: 2
  selector:
    matchLabels:
      app: teach-maintenance
  template:
    metadata:
      labels:
        app: teach-maintenance
    spec:
      nodeSelector:
        teacherservices.cloud/node_pool: applications
        kubernetes.io/os: linux
      containers:
      - name: teach-maintenance
        image: ghcr.io/dfe-digital/teacher-success-maintenance:#MAINTENANCE_IMAGE_TAG#
        securityContext:
          allowPrivilegeEscalation: false
          runAsNonRoot: true
        ports:
        - containerPort: 8080
        resources:
          requests:
            memory: 64M
            cpu: 0.1
          limits:
            memory: 64M
            cpu: 1
